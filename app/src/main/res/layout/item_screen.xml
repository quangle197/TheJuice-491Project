<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbarItemScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <ImageView
            android:id="@+id/shoppingCartItemScreen"
            android:layout_width="46dp"
            android:layout_height="34dp"
            android:layout_marginLeft="360sp"
            android:layout_marginTop="-40sp"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:id="@+id/menuItemScreen"
            android:layout_width="46dp"
            android:layout_height="32dp"
            android:layout_marginTop="-46sp"
            android:src="@drawable/menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center|right"></LinearLayout>

        <LinearLayout
            android:id="@+id/searchBarItemScreen"
            android:layout_width="378dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center|right">

            <EditText
                android:id="@+id/editMobileNo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:drawableLeft="@drawable/search"
                android:ems="10"
                android:gravity="left|center"
                android:hint="Search for an item"
                android:singleLine="false"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"></EditText>

        </LinearLayout>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/itemPictureLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_below="@id/toolbarItemScreen"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemPictureItemScreen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_menu_gallery" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftInformationLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemPictureLinearLayout"
        android:orientation="vertical">

        <EditText
            android:id="@+id/itemNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Item Name" />

        <EditText
            android:id="@+id/itemPriceEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Price" />

        <EditText
            android:id="@+id/itemDistanceEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Distance" />

        <EditText
            android:id="@+id/itemSellerEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Seller: " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoPanelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemPictureLinearLayout"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/leftInformationLayout"
        android:orientation="vertical">

        <EditText
            android:id="@+id/contactSellerEditText"
            android:layout_width="wrap_content"
            android:layout_height="-180dp"
            android:layout_marginTop="135dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Contact Seller" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonItemScreenPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/leftInformationLayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addToCartButton"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_button"
            android:text="Add to Cart"
            android:textColor="@color/AliceBlue" />

        <Button
            android:id="@+id/offerUpButton"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_button"
            android:text="Offer"
            android:textColor="@color/AliceBlue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/buttonItemScreenPanel"
        android:orientation="vertical">

        <EditText
            android:id="@+id/conditionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Condition: "/>

        <EditText
            android:id="@+id/quantityEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conditionEditText"
            android:text="Quantity: "/>

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/conditionEditText"
            android:text="Description: " />
    </LinearLayout>

</RelativeLayout>