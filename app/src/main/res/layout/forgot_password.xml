<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WeSellGreen"
    tools:context="com.example.quangle.myapplication.ForgotPassword">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="184dp"
            android:layout_height="152dp"
            android:layout_marginLeft="112sp"
            android:layout_marginTop="140sp"
            android:gravity="center"
            android:text="Forgot Your Password?"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="195dp"
            android:layout_height="44dp"
            android:layout_marginLeft="102sp"
            android:layout_marginTop="-35sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Enter your email and we'll send you a new password." />

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="textPersonName|textEmailSubject"
            android:hint="Enter your email"
            android:textSize="18sp"
            android:layout_marginTop="100dp"/>

        <Button
            android:id="@+id/enter"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:background="@drawable/rounded_button2"
            android:padding="10dp"
            android:hint="Send"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/WeSellGreen"
            android:layout_gravity="center"
            />



    </LinearLayout>

</RelativeLayout>