<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.quangle.myapplication.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="130dp" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="387dp"
            android:layout_height="298dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Items near you"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="375sp"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"

            android:background="@android:color/darker_gray" />

        <View
            android:layout_width="1sp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray" />

        <View
            android:layout_width="375sp"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="103dp"
            android:layout_height="64dp"
            android:layout_marginTop="-165sp"
            android:layout_marginLeft="50sp"
            app:srcCompat="@drawable/ic_menu_gallery" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="103dp"
            android:layout_height="64dp"
            android:layout_marginTop="-65sp"
            android:layout_marginLeft="250sp"
            app:srcCompat="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:text="Name of seller" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:text="Name of item" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:text="Price" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:text="Distance from user" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260sp"
            android:layout_marginTop="-78sp"
            android:text="Name of seller" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="260sp"
            android:text="Name of item" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="110dp"
            android:layout_height="22dp"
            android:layout_marginLeft="260sp"
            android:layout_marginTop="2sp"
            android:text="Price" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginLeft="260sp"
            android:layout_marginTop="-4sp"
            android:text="Distance from user" />

    </LinearLayout>

</RelativeLayout>
